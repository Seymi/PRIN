<h1>Test Objects for <%= @customer.last_name %></h1>

<% if !@customer.test_objects.empty? %>

<table>
  <tr>
    <th>Customer</th>
    <th>Desc</th>
    <th>Detail desc</th>
    <th>Weight</th>
    <th>Punch</th>
    <th>Punch year</th>
    <th>Photo extension</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for test_object in @test_objects %>
  <tr>
    <td><%= test_object.customer.last_name %></td>
    <td><%= test_object.desc %></td>
    <td><%= test_object.detail_desc %></td>
    <td><%= test_object.weight %></td>
    <td><%= test_object.punch %></td>
    <td><%= test_object.punch_year %></td>
    <td><%= test_object.photo_extension %></td>
    <td><%= link_to 'Show', [@customer, test_object] %></td>
    <td><%= link_to 'Edit', edit_customer_test_object_path(@customer, test_object) %></td>
    <td><%= link_to 'Destroy', [@customer, test_object], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% else %>
  <p><%=  @customer.last_name %> hasn't any test objects yet.</p>
<% end %>


<%= link_to 'New Test object', new_customer_test_object_path(@customer) %> |
<%= link_to 'Back', @customer %>

